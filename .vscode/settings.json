{
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "headwind.runOnSave": false,
  "restoreTerminals.terminals": [
    {
      "splitTerminals": [
        {
          "name": "App",
          "commands": ["yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "Storybook",
          "commands": ["yarn storybook"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "Tests",
          "commands": ["yarn cy"],
          "shouldRunCommands": false
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "Git",
        }
      ]
    }
  ],
  "conventionalCommits.scopes": [
    "Scope#1"
  ],
}
